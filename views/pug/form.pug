html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
  body
    nav
      ul(class="d-flex justify-content-center p-4")
        a(class="text-decoration-none text-dark me-5 btn btn-secondary text-white", href="/pug")
          li(class="list-unstyled") Ver productos
        //- a(class="text-decoration-none text-dark btn btn-secondary text-white", href="/pug/add") 
        //-   li(class="list-unstyled") Agregar producto
    div(class="container text-center")
      h1 Ingreso de productos
      form(action="/pug/add" method="POST" class="w-50 mx-auto")   
        div(class="mb-3 mt-5")
          label(for="title" class="form-label") Titulo
          input(name="title" type="text" class="form-control" id="exampleInputTitle" aria-describedby="emailHelp")
        div(class="mb-3")
          label(for="price" class="form-label") Precio
          input(name="price" type="text" class="form-control" id="exampleInputPrice" aria-describedby="emailHelp")
        div(class="mb-3")
          label(for="thumbnail" class="form-label") Url Imagen
          input(name="thumbnail" type="text" class="form-control" id="exampleInputUrl" aria-describedby="emailHelp")
        button(type="submit" class="btn btn-dark") Enviar

